public type Ticket record {|
    readonly string id;
    string passengerId;
    string tripId;
    string ticketType;  
    decimal price;
    TicketStatus status; 
    string paymentId?;
    time:Utc createdAt;
    time:Utc updatedAt;
    time:Utc expiresAt;
|};

public enum TicketStatus {
    CREATED,
    PAID,
    VALIDATED, 
    EXPIRED
}

public type CreateTicketRequest record {|
    string passengerId;
    string tripId;
    string ticketType;
    decimal price;
|};



